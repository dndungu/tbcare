<?xml version="1.0" encoding="UTF-8"?>
<grid name="role" title="users.roles" searchable="true" sortable="true" paginatable="true" showColumnBar="true" showFooterBar="true" storage="global">
    <records>
        <ordercolumn>title</ordercolumn>
        <orderdirection>asc</orderdirection>
        <filter field="inTrash" value="No"/>
        <search parameters="5">`ID` = %d OR `login` LIKE '%%s%' OR `email` LIKE '%%s%' OR `firstname` LIKE '%%s%' OR `lastname` LIKE '%%s%'</search>
    </records>
    <columns primarykey="ID">
        <column name="ID" field="ID" title="id.label" class="grid1of10 column"></column>
        <column name="title" field="title" title="role.label" class="grid7of10 column"></column>
        <column name="creationTime" field="creationTime" title="creationTime.label" class="grid2of10 column"></column>
    </columns>
</grid>