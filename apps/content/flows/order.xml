<?xml version="1.0" encoding="UTF-8"?>
<flow name="order">
    <select access="permission.order.section"></select>
    <insert access="permission.order.insert"></insert>
    <update access="permission.order.update"></update>
    <delete access="permission.order.delete"></delete>
    <status>
	    <event name="approved" label="approved.label" parent="incoming" access="permission.order.approve"></event>
	    <event name="rejected" label="rejected.label" parent="incoming" access="permission.order.reject"></event>
	    <event name="authorized" label="authorized.label" parent="approved" access="permission.order.authorize"></event>
	    <event name="unauthorized" label="unauthorized.label" parent="approved" access="permission.order.unauthorize"></event>
    </status>    
</flow>